<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ChatMeister.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatMeister"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:ChatMeister.Data"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SelectorBar x:Name="pageSelectorBar"
                 Grid.Row="0"
                 SelectionChanged="pageSelectorBar_SelectionChanged">
        <SelectorBarItem x:Name="chatsSelectorBarItem"  Text="Chats"/>
        <SelectorBarItem x:Name="messageSelectorBarItem"  Text="Messages"/>
        </SelectorBar>

        <Frame x:Name="contentFrame"
                Grid.Row="1"/>

    </Grid>
  
</Window>
